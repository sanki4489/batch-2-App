<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="User Info"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/namehere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="User's Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/round_border"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_person_add"
        android:drawablePadding="15dp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Phone numbers"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Parent Number"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/round_border"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="15dp" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Your Number"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/round_border"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="15dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Your Location"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/text_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_location_searching"
        android:text="Getting your location"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/round_border"
        android:padding="15dp"
        android:drawablePadding="15dp" />

    <Button
        android:id="@+id/button_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Record video"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="camera"
        android:padding="15dp"
        android:background="@drawable/round_bg"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/button_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Home"
        android:layout_marginBottom="10dp"
        android:onClick="home"
        android:textColor="@android:color/white"
        android:background="@drawable/round_bg"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Call police"
        android:textColor="@android:color/white"
        android:background="@drawable/police_bg"
        android:padding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shake your phone now!!"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/text12"
        android:textColor="@android:color/black"
        />
</LinearLayout>